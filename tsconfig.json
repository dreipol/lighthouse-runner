{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "listFiles": true,
    "paths": {
      "@dreipol/*": [
        "node_modules/@dreipol/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "dist"
  ]
}
