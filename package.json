        "@types/mocha": "^5.2.0",
        "@types/puppeteer": "^1.3.2",
        "@types/sinon": "^4.3.3",
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "mocha": "^5.0.5",
        "request": "^2.86.0",
        "rimraf": "^2.6.2",
        "sinon": "^5.0.7",
        "ts-node": "^6.0.3",
